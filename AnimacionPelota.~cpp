//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop
USERES("AnimacionPelota.res");
USEFORM("main.cpp", MainForm);
USEFORM("TFormRadio.cpp", FormRadio);
USEUNIT("Lapiz.cpp");
USEUNIT("Pelota.cpp");
USEUNIT("PV2D.cpp");
USEFORM("TFormVelocidad.cpp", VelocidadForm);
//---------------------------------------------------------------------------
WINAPI WinMain(HINSTANCE, HINSTANCE, LPSTR, int)
{
        try
        {
                 Application->Initialize();
                 Application->CreateForm(__classid(TMainForm), &MainForm);
                 Application->CreateForm(__classid(TFormRadio), &FormRadio);
                 Application->CreateForm(__classid(TVelocidadForm), &VelocidadForm);
                 Application->Run();
        }
        catch (Exception &exception)
        {
                 Application->ShowException(&exception);
        }
        return 0;
}
//---------------------------------------------------------------------------
